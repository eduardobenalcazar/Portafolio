---
export interface Project {
  title: string;
  date: string;
  imageUrl: string;
  githubUrl: string;
}

const projects: Project[] = [
  {
    title: "Portafolio",
    date: "Julio 22, 2024",
    imageUrl: "../../public/projects/portafolio.webp",
    githubUrl: "#"
  },
  {
    title: "Tarjeta",
    date: "Julio 23, 2024",
    imageUrl: "../../public/projects/card.webp",
    githubUrl: "https://github.com/eduardobenalcazar/Tarjeta-"
  },
  {
    title: "Juego de Snake",
    date: "Julio 24, 2024",
    imageUrl: "../../public/projects/snake.webp",
    githubUrl: "https://github.com/eduardobenalcazar/Juego-de-Snake"
  }
];
---

<section class="projects-section">
  <div class="wrapper">
    <header id="project-images">
      <h2>Proyectos <span>Recientes</span></h2>
    </header>
    <div class="projects-grid">
      {projects.map((project) => (
        <div class="project-card">
          <a href={project.githubUrl} target="_blank" rel="noopener noreferrer">
            <img src={project.imageUrl} alt={project.title} class="project-image"/>
            <div class="project-content">
              <h3>{project.title}</h3>
              <p class="project-date">{project.date}</p>
            </div>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .wrapper {
  width: 60%;
  margin: 0 auto;}
  .projects-section {
    padding: 40px 0;
  }

  .projects-section header h2 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .projects-section header h2 span {
    color: #00aaff;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  .project-card {
    background-color: #16213e;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s;
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-card a {
    color: inherit;
    text-decoration: none;
  }

  .project-image {
    width: 100%;
    height: auto;
  }

  .project-content {
    padding: 20px;
  }

  .project-content h3 {
    margin: 0;
    font-size: 1.5rem;
  }

  .project-date {
    color: #bbb;
    font-size: 0.9rem;
    margin: 5px 0;
  }

  .project-content p {
    margin: 10px 0 0;
  }
</style>
